<div class="row">
  <div class="col-md-12">
    <h1>Listando valores dos produtos</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-condensed ">
      <thead>
        <tr>
          <th>Produto</th>
          <th>Vl. uni. compra</th>
          <th>Vl uni venda</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        
        <% @product_values.each do |product_value| %>
          <tr>
            <td><%= product_value.product.name %></td>
            <td><%= product_value.vl_purchase_uni %></td>
            <td><%= product_value.vl_sale_uni %></td>
            <td><%= product_value.fl_status == "A" ? "Ativo" : "Inativo" %></td>
            <td>
              <%= link_to content_tag(:span, "", class: 'glyphicon glyphicon-trash'), product_value, method: :delete, data: { confirm: "Deseja realmente apagar?" }, class: 'btn btn-default float-right' %>
              <%= link_to content_tag(:span, "", class: 'glyphicon glyphicon-edit'), edit_product_value_path(product_value), method: :get, class: 'btn btn-default float-right' %>
              <%= link_to content_tag(:span, "", class: 'glyphicon glyphicon-eye-open'), product_value, method: :get, class: 'btn btn-default float-right' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-12">
    <%= button_to 'Novo Valor', new_product_value_path, method: :get, class: 'btn btn-primary float-right'  %>
  </div>
</div>


