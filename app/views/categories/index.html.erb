<div class="row">
  <div class="col-md-12">
    <h1>Lista de categorias</h1>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-condensed ">
      <thead>
        <tr>
          <th>Descrição</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.description %></td>
            <td>
              <%= link_to  content_tag(:span, "", class: 'glyphicon glyphicon-trash'), category, method: :delete, data: { confirm: "Deseja realmente apagar?" }, class: 'btn btn-default float-right' %>
              <%= link_to content_tag(:span, "", class: 'glyphicon glyphicon-edit'), edit_category_path(category), method: :get, class: 'btn btn-default float-right' %>
              <%= link_to content_tag(:span, "", class: 'glyphicon glyphicon-eye-open'), category, method: :get, class: 'btn btn-default float-right' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= button_to 'Nova categoria', new_category_path, method: :get, class: 'btn btn-primary float-right'  %>
  </div>
</div>
