<div class="row">
  <div class="col-md-12">
    <% if notice != nil %>
      <div class="alert alert-success" role="alert" id="notice">
        <strong>Sucesso!</strong> <%= notice %>
      </div>
    <% end %>
    <h1>Listando  Produtos</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-condensed ">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Categoria</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.category.description %></td>
            <td>
              <%= link_to  content_tag(:span, "", class: 'glyphicon glyphicon-trash'), product, method: :delete, data: { confirm: "Deseja realmente apagar?" }, class: 'btn btn-default float-right' %>
              <%= link_to content_tag(:span, "", class: 'glyphicon glyphicon-edit'), edit_product_path(product), method: :get, class: 'btn btn-default float-right' %>
              <%= link_to content_tag(:span, "", class: 'glyphicon glyphicon-eye-open'), product, method: :get, class: 'btn btn-default float-right' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= button_to 'Novo Produto', new_product_path, method: :get, class: 'btn btn-primary float-right'  %>
  </div>
</div>










